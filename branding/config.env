# =============================================================================
# SignConnect Brand Configuration
# =============================================================================
# This file configures the white-label branding for ThingsBoard
# Edit these values to customize your deployment
#
# Version: 2.0 - Extended configuration with hardcoded colors and UX options
# =============================================================================

# ============================================
# BRAND IDENTITY
# ============================================

# Brand name (replaces "ThingsBoard" throughout UI)
BRAND_NAME="SignConnect"

# Company name (for copyright notices)
BRAND_COMPANY="Lumosoft"

# Domain (for URL references)
BRAND_DOMAIN="signconnect.io"

# Website URL (for footer links)
WEBSITE_URL="https://lumosoft.io"

# ============================================
# COLOR PALETTE
# ============================================
# All colors in hex format WITHOUT the # prefix
# Based on Lumosoft brand colors

# Primary brand color (sidebar, header background)
# Lumosoft dark navy
PRIMARY_COLOR="17212b"

# Secondary color (buttons, links)
# Lumosoft golden yellow
SECONDARY_COLOR="f9b11d"

# Accent color (highlights, hover states)
# Lumosoft golden yellow
ACCENT_COLOR="f9b11d"

# Dark mode primary color
# Lumosoft dark variant
DARK_PRIMARY_COLOR="232c36"

# Light primary (hover states on dark backgrounds)
# Lumosoft mid-dark
LIGHT_PRIMARY_COLOR="2e3740"

# Link color (text links in content)
# Using secondary golden for visibility
LINK_COLOR="f9b11d"

# Loading spinner color (RGB format, no spaces)
# Lumosoft golden
LOADING_SPINNER_COLOR="249,177,29"

# ============================================
# ORIGINAL THINGSBOARD COLORS (for reference)
# ============================================
# These are the colors being replaced - DO NOT CHANGE
# PRIMARY_COLOR="305680"
# SECONDARY_COLOR="527dad"
# ACCENT_COLOR="a7c1de"
# DARK_PRIMARY_COLOR="9fa8da"
# LIGHT_PRIMARY_COLOR="7986cb"
# LINK_COLOR="106cc8"
# LOADING_SPINNER_COLOR="43,160,199"

# ============================================
# COPYRIGHT & LEGAL
# ============================================

# Copyright holder name
COPYRIGHT_HOLDER="Lumosoft"

# Full copyright text ({year} replaced with current year)
COPYRIGHT_TEXT="Copyright ${year} Lumosoft"

# ============================================
# DOCUMENTATION
# ============================================

# Help/documentation base URL
# Leave empty to disable help links entirely
DOCS_URL=""

# ============================================
# EMAIL TEMPLATES
# ============================================

# Email sender name
EMAIL_SENDER_NAME="SignConnect"

# Email signature
EMAIL_SIGNATURE="â€” The SignConnect Team"

# Email footer text
EMAIL_FOOTER="powered by SignConnect"

# ============================================
# TRANSLATION SETTINGS
# ============================================

# Update all translation files (29 languages)
# Set to "false" to only update English
UPDATE_ALL_TRANSLATIONS="true"

# Fix "powered by SignConnect" to "by SignConnect" in translations
FIX_POWERED_BY_TEXT="false"

# ============================================
# UI ELEMENTS
# ============================================

# Hide GitHub star badge in toolbar
# Set to "true" to remove the GitHub badge
HIDE_GITHUB_BADGE="true"

# Remove "Powered by ThingsBoard" footer from dashboard
REMOVE_POWERED_BY_FOOTER="true"

# Remove help links entirely (vs pointing to custom docs)
REMOVE_HELP_LINKS="true"

# ============================================
# HARDCODED COLOR REPLACEMENT
# ============================================

# Replace hardcoded #305680 colors throughout codebase
# This affects 60+ locations in TypeScript, SCSS, HTML, JSON, SVG files
# WARNING: This is aggressive - review results after build
REPLACE_HARDCODED_COLORS="true"

# ============================================
# API DOCUMENTATION
# ============================================

# Update Swagger API documentation branding
UPDATE_SWAGGER="true"

# ============================================
# BACKEND CONFIGURATION
# ============================================

# JWT Token Issuer domain
JWT_ISSUER_DOMAIN="signconnect.io"

# Swagger API contact email
SWAGGER_CONTACT_EMAIL="support@lumosoft.io"

# Mobile app domain
MOBILE_APP_DOMAIN="signconnect.io"

# ============================================
# BACKUP SETTINGS
# ============================================

# Create backup of original files before modifying
CREATE_BACKUP="true"

# Backup directory (relative to branding/)
BACKUP_DIR="originals"

# Also backup translation files (29 files, ~50MB)
BACKUP_TRANSLATIONS="false"

# ============================================
# SCRIPT SETTINGS
# ============================================

# Verbose logging during script execution
VERBOSE="false"
